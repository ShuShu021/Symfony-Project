{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <h1>{{ article.titre }}</h1>
    {% if article.img %}
        <img src="{{ article.img }}" alt="">
    {% endif %}

    <p>Ecrit le {{ article.date|date('d/m/Y') }}</p>
    <p>{{ article.contenu }}</p>
    <p>
        <a class="btn" href="{{ path('app_article_edit', {'id': article.id}) }}">Ã‰diter</a>
    </p>
    <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Supprimer cet article ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
        <button class="btn btn-danger">Supprimer</button>
    </form>
{% endblock %}