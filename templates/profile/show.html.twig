{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <h1>Profil</h1>
    <p>Email: {{ user.email }}</p>
    <p>Roles: {{ user.roles|join(', ') }}</p>
    <p>
        <a class="btn" href="{{ path('app_profile_edit') }}">Modifier le profil</a>
    </p>

    <form method="post" action="{{ path('app_profile_delete') }}" onsubmit="return confirm('Supprimer votre compte ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn btn-danger">Supprimer mon compte</button>
    </form>
{% endblock %}
